@model Movie
@{
    ViewData["Title"] = "Add new movie";
}

<h1>Add new movie</h1>
<form asp-action="Create" asp-controller="Movies" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Year">Year</label>
        <input type="text" asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Rating">Rating</label>
        <input type="text" asp-for="Rating" class="form-control" />
    </div>
    <button class="btn btn-primary" asp-controller="Movies" asp-action="Create">Add</button>
    <a asp-controller="Movies" asp-action="List" class="btn btn-primary">Cancel</a>
</form>
